<% title = "Subjects" %>
<%- include('../partials/head'); %>
<%- include('../partials/nav'); %>

<div class="container-fluid">
    <div class="table-wrapper">

        <div>
            <div class="menu">
                <ul class="user-menu">
                    <li class="nav-item"><a class="nav-link" href="/users/<%= userId %>"><span>User Edit</span></a></li>
                    <li class="nav-item"><a class="nav-link" href="/classes/user/<%= userId %>"><span>Classes</span></a></li>
                    <li class="nav-item"><a class="nav-link" href="/exams/user/<%= userId %>"><span>Exams</span></a></li>
                    <li class="nav-item"><a class="nav-link" href="/tasks/user/<%= userId %>"><span>Tasks</span></a></li>
                    <li class="nav-item"><a class="nav-link active" href="/subjects/user/<%= userId %>"><span>Subjects</span></a></li>
                    <li class="nav-item"><a class="nav-link" href="/holidays/user/<%= userId %>"><span>Holidays</span></a></li>
                    <li class="nav-item" style="float: right;"><a class="nav-link" href="/users"><span>< Back</span></a></li>
                </ul>
            </div>
        </div>

        <%- include('../partials/pagination'); %>

        <p>Total: <%= count %></p>
        
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>User</th>
                    <th>Subject</th>
                    <th>Color</th>
                    <th>Image</th>
                    <th>Created At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>

                <% if (subjects.length === 0) { %>
                    <tr>
                        <td colspan="15">No subjects found.</td>
                    </tr>
                <% } %>

                <% subjects.forEach(function(subject) { %>
                <tr>
                    <td><%= subject.id %></td>
                    
                    <td><%= subject.userId %></td>
                    <td><%= subject.subject %></td>
                    <td><%= subject.color %></td>
                    <td><img width="50" src="<%= subject.image %>"></td>
                    <td><%= moment(subject.createdAt).format('DD/MM/YYYY HH:mm:ss') %></td>
                    <td>
                        <a href="/subjects/<%= subject.id %>" class="btn btn-sm btn-primary">Edit</a>
                        <a href="/subjects/<%= subject.id %>" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>

        <%- include('../partials/pagination'); %>


    </div>
</div>


<%- include('../partials/footer'); %>