<% title = "Classes" %>
<%- include('../partials/head'); %>
<%- include('../partials/nav'); %>

<div class="container-fluid">
    <div class="table-wrapper">
        
        <div>
            <div class="menu">
                <ul class="user-menu">
                    <li class="nav-item"><a class="nav-link" href="/users/<%= userId %>"><span>User Edit</span></a></li>
                    <li class="nav-item"><a class="nav-link active" href="/classes/user/<%= userId %>"><span>Classes</span></a></li>
                    <li class="nav-item"><a class="nav-link" href="/exams/user/<%= userId %>"><span>Exams</span></a></li>
                    <li class="nav-item"><a class="nav-link" href="/tasks/user/<%= userId %>"><span>Tasks</span></a></li>
                    <li class="nav-item"><a class="nav-link" href="/subjects/user/<%= userId %>"><span>Subjects</span></a></li>
                    <li class="nav-item"><a class="nav-link" href="/holidays/user/<%= userId %>"><span>Holidays</span></a></li>
                    <li class="nav-item" style="float: right;"><a class="nav-link" href="/users"><span>< Back</span></a></li>
                </ul>
            </div>
        </div>

        <%- include('../partials/pagination'); %>
        <p>Total: <%= count %></p>
        
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>User</th>
                    <th>Subject</th>
                    <!-- <th>Module</th> -->
                    <th>Mode</th>
                    <th>Room</th>
                    <!-- <th>Building</th> -->
                    <!-- <th>Online URL</th> -->
                    <th>Teacher</th>
                    <!-- <th>Teacher's Email</th> -->
                    <th>Occurs</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Start Time</th>
                    <th>End Time</th>
                    <th>Created At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                
                <% if (classes.length === 0) { %>
                    <tr>
                        <td colspan="15">No classes found.</td>
                    </tr>
                <% } %>

                <% classes.forEach(function(classObject) { %>
                <tr>
                    <td><%= classObject.id %></td>
                    
                    <td><%= classObject.userId %></td>
                    <td><%= classObject.subject ? classObject.subject.subject : '' %></td>
                    <!-- <td><%= classObject.module %></td> -->
                    <td><%= classObject.mode %></td>
                    <td><%= classObject.room %></td>
                    <!-- <td><%= classObject.building %></td> -->
                    <!-- <td><%= classObject.onlineUrl %></td> -->
                    <td><%= classObject.teacher %></td>
                    <!-- <td><%= classObject.teachersEmail %></td> -->
                    <td><%= classObject.occurs %></td>
                    <td><%= classObject.startDate ? moment(classObject.startDate).format('DD/MM/YYYY') : '' %></td>
                    <td><%= classObject.endDate ? moment(classObject.endDate).format('DD/MM/YYYY') : '' %></td>
                    <td><%= classObject.startTime %></td>
                    <td><%= classObject.endTime %></td>
                    <td><%= moment(classObject.createdAt).format('DD/MM/YYYY HH:mm:ss') %></td>
                    
                    <td>
                        <a href="/classes/<%= classObject.id %>" class="btn btn-sm btn-primary">Edit</a>
                        <a href="/classes/<%= classObject.id %>" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>


        <%- include('../partials/pagination'); %>
  
        
    </div>
</div>


<%- include('../partials/footer'); %>