<% title = "Holidays" %>
<%- include('../partials/head'); %>
<%- include('../partials/nav'); %>

<div class="container-fluid">
    <div class="table-wrapper">

        <div>
            <div class="menu">
                <ul class="user-menu">
                    <li class="nav-item"><a class="nav-link" href="/users/<%= userId %>"><span>User Edit</span></a></li>
                    <li class="nav-item"><a class="nav-link" href="/classes/user/<%= userId %>"><span>Classes</span></a></li>
                    <li class="nav-item"><a class="nav-link" href="/exams/user/<%= userId %>"><span>Exams</span></a></li>
                    <li class="nav-item"><a class="nav-link" href="/tasks/user/<%= userId %>"><span>Tasks</span></a></li>
                    <li class="nav-item"><a class="nav-link" href="/subjects/user/<%= userId %>"><span>Subjects</span></a></li>
                    <li class="nav-item"><a class="nav-link active" href="/holidays/user/<%= userId %>"><span>Holidays</span></a></li>
                    <li class="nav-item" style="float: right;"><a class="nav-link" href="/users"><span>< Back</span></a></li>
                </ul>
            </div>
        </div>

        <%- include('../partials/pagination'); %>

        <p>Total: <%= count %></p>
        
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>User</th>
                    <th>Title</th>
                    <th>Image</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Created At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>

                <% if (holidays.length === 0) { %>
                    <tr>
                        <td colspan="15">No holidays found.</td>
                    </tr>
                <% } %>

                <% holidays.forEach(function(holiday) { %>
                    <tr>
                        <td><%= holiday.id %></td>
                        <td><%= holiday.userId %></td>
                        <td><%= holiday.title %></td>
                        <td><img width="50" src="<%= holiday.image %>"></td>
                        <td><%= moment(holiday.startDate).format('DD/MM/YYYY HH:mm:ss') %></td>
                        <td><%= moment(holiday.endDate).format('DD/MM/YYYY HH:mm:ss') %></td>
                        <td><%= moment(holiday.createdAt).format('DD/MM/YYYY HH:mm:ss') %></td>
                        <td>
                            <a href="/Holidays/<%= holiday.id %>" class="btn btn-sm btn-primary">Edit</a>
                            <a href="/Holidays/<%= holiday.id %>" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                <% }); %>

            </tbody>
        </table>

        <%- include('../partials/pagination'); %>

    </div>
</div>


<%- include('../partials/footer'); %>