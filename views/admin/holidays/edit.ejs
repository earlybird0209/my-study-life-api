<% title = "Holidays" %>
<%- include('../partials/head'); %>
<%- include('../partials/nav'); %>

<div class="container mt-2">
    <div>
        <h2>Holidays Edit</h2>
        <!-- edit class form -->
        <form action="/class/<%= holiday.id %>" method="POST">
            
            <div class="row">
            <div class="col-md-6">

                <div class="form-group">
                    <label for="userId">User</label>
                    <input type="text" disabled class="form-control" id="userId" name="userId" value="<%= holiday.userId %>">
                </div>

                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" id="title" name="title" value="<%= holiday.title %>">
                </div>

                <div class="form-group">
                    <label for="startDate">Start Date</label>
                    <input type="datetime-local" class="form-control" id="startDate" name="startDate" value="<%= moment(holiday.startDate).format('YYYY-MM-DDTHH:mm') %>">
                </div>

                <div class="form-group">
                    <label for="endDate">End Date</label>
                    <input type="date" class="form-control" id="endDate" name="endDate" value="<%= moment(holiday.endDate).format('YYYY-MM-DD') %>">
                </div>

            </div>

            <div class="col-md-6">
               
                <div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" class="form-control" id="image" name="image" value="<%= holiday.image %>">
                    <img src="<%= holiday.image %>" width="200" alt="">
                </div>
                
                <div class="form-group">
                    <label for="createdAt">Created At</label>
                    <input type="text" disabled class="form-control" id="createdAt" name="createdAt" value="<%= holiday.createdAt %>">
                </div>

                <button type="submit" class="btn btn-success float-right">Update</button>

            </div>
        </div>

            

        </form>


    </div>
</div>


<%- include('../partials/footer'); %>