<% title = "Tasks" %>
<%- include('../partials/head'); %>
<%- include('../partials/nav'); %>

<div class="container-fluid">
    <div class="table-wrapper">

        <div>
            <div class="menu">
                <ul class="user-menu">
                    <li class="nav-item"><a class="nav-link" href="/users/<%= userId %>"><span>User Edit</span></a></li>
                    <li class="nav-item"><a class="nav-link" href="/classes/user/<%= userId %>"><span>Classes</span></a></li>
                    <li class="nav-item"><a class="nav-link" href="/exams/user/<%= userId %>"><span>Exams</span></a></li>
                    <li class="nav-item"><a class="nav-link active" href="/tasks/user/<%= userId %>"><span>Tasks</span></a></li>
                    <li class="nav-item"><a class="nav-link" href="/subjects/user/<%= userId %>"><span>Subjects</span></a></li>
                    <li class="nav-item"><a class="nav-link" href="/holidays/user/<%= userId %>"><span>Holidays</span></a></li>
                    <li class="nav-item" style="float: right;"><a class="nav-link" href="/users"><span>< Back</span></a></li>
                </ul>
            </div>
        </div>

        <%- include('../partials/pagination'); %>

        <p>Total: <%= count %></p>
        
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>User</th>
                    <th>Subject</th>
                    <th>Details</th>
                    <th>Type</th>
                    <th>Category</th>
                    <th>Occurs</th>
                    <th>Days</th>
                    <th>Due Date</th>
                    <th>Created At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>

                <% if (tasks.length === 0) { %>
                    <tr>
                        <td colspan="15">No tasks found.</td>
                    </tr>
                <% } %>

                <% tasks.forEach(function(task) { %>
                <tr>
                    <td><%= task.id %></td>
                    
                    <td><%= task.userId %></td>
                    <td><%= task.subject ? task.subject.subject : '' %></td>
                    <td><%= task.details %></td>
                    <td><%= task.type %></td>
                    <td><%= task.category %></td>
                    <td><%= task.occurs %></td>
                    <td><%= task.days %></td>
                    <td><%= moment(task.dueDate).format('DD/MM/YYYY HH:mm') %></td>
                    <td><%= moment(task.createdAt).format('DD/MM/YYYY HH:mm:ss') %></td>

                    
                    
                    <td>
                        <a href="/tasks/<%= task.id %>" class="btn btn-sm btn-primary">Edit</a>
                        <a href="/tasks/<%= task.id %>" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>

        <%- include('../partials/pagination'); %>


    </div>
</div>


<%- include('../partials/footer'); %>